{
  "name": "patrickkusebauch/kubernetes-dns",
  "type": "library",
  "description": "Retrieve Kubernetes service host from Environment or K8s DNS server.",
  "keywords": ["php", "dns", "kubernetes", "k8s", "service locator", "environment", "devOps"],
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Patrick Kusebauch",
      "email": "patrick.kusebauch@gmail.com"
    }
  ],
  "require": {
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "vimeo/psalm": "^3",
    "phpstan/phpstan": "^0.12"
  },
  "autoload": {
    "psr-4": {
      "PatrickKusebauch\\KubernetesDNS\\": "src/"
    }
  },
  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "scripts": {
    "sa": [
      "@psalm",
      "@phpstan"
    ],
    "psalm": "bin/psalm --no-cache",
    "phpstan": "bin/phpstan analyze src"
  }
}